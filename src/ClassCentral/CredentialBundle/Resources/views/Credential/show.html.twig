{% extends 'ClassCentralSiteBundle::base.html.twig' %}

{% block content -%}
    <h1>Credential</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Oneliner</th>
                <td>{{ entity.oneLiner }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ entity.price }}</td>
            </tr>
            <tr>
                <th>Priceperiod</th>
                <td>{{ entity.pricePeriod }}</td>
            </tr>
            <tr>
                <th>Durationmin</th>
                <td>{{ entity.durationMin }}</td>
            </tr>
            <tr>
                <th>Durationmax</th>
                <td>{{ entity.durationMax }}</td>
            </tr>
            <tr>
                <th>Workloadmin</th>
                <td>{{ entity.workloadMin }}</td>
            </tr>
            <tr>
                <th>Workloadmax</th>
                <td>{{ entity.workloadMax }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ entity.url }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ entity.created|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Modified</th>
                <td>{{ entity.modified|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('credential') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('credential_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('credential_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
