{% extends 'ClassCentralSiteBundle::base.html.twig' %}
{% block headmeta %}
    <title>Credentials of link</title>
    <meta name="robots" content="noindex" />
{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-md-9">
            <div class="color-scheme-brand form" >
                <div class="padded-input-group padded-input-group--border-bot">
                    <h2 class="heading-colored">Please pick a Credential to review </h2>
                    <div class="row">
                        <div class="col-lg-6" style="padding-left: 50px">
                            {% for credential in credentials %}
                               <p> <a href="{{ path('credential_review', {credentialId: credential.id  })  }}">Review <b>{{ credential.name }}</b> from {{ credential.initiative.name }}</a></p>
                            {% endfor %}
                        </div>
                    </div>
                    </div>
            </div>
        </div>
    </div>
{% endblock %}
