{% extends 'ClassCentralSiteBundle::base.html.twig' %}

{% block content -%}
    <h1>HelpGuideArticle list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Text</th>
                <th>Summary</th>
                <th>Orderid</th>
                <th>Slug</th>
                <th>Created</th>
                <th>Modified</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('help-guide-article_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.text }}</td>
                <td>{{ entity.summary }}</td>
                <td>{{ entity.orderId }}</td>
                <td>{{ entity.slug }}</td>
                <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.modified %}{{ entity.modified|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.status }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('help-guide-article_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('help-guide-article_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('help-guide-article_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
