{% extends 'ClassCentralSiteBundle::base.html.twig' %}


 {% block headmeta %}
     <title>Top 50 Free Online Courses | Class Central</title>
     <meta name="description" content="The 50 best FREE online courses & MOOCs from top universities around the world"/>

     <meta property="og:title" content="Top 50 Free Online Courses | Class Central"/>
     <meta property="og:type" content="website"/>
     <meta property="og:url" content="https://www.class-central.com/collection/best-free-online-courses"/>
     <meta property="og:image" content="https://www.class-central.com/bundles/classcentralsite/slashpixel/images/top_50.png">
     <meta property="og:site_name" content="Class Central" />
     <meta property="fb:admins" content="{{ fb_admins }}" />
     <meta property="og:description"
           content="50 highest rated free online courses & MOOCs from top universities around the world" />

     <meta name="twitter:card" content="summary_large_image">
     <meta name="twitter:site" content="@classcentral">
     <meta name="twitter:creator" content="@dhawalhshah">
     <meta name="twitter:title" content="Top 50 Free Online Courses">
     <meta name="twitter:description" content="50 highest rated FREE online courses & MOOCs from top universities around the world">
     <meta name="twitter:image" content="https://www.class-central.com/bundles/classcentralsite/slashpixel/images/top_50.png">
 {% endblock %}

{% block contentheader %}
    <section class="headerArea headerArea-slim">
        <div class="container">
            <div class="headerIntro">

                <div class="headerIntro_topText">
                    Highest Rated MOOCs
                </div>

                <h1 class="headerIntro_title headerIntro_title-noSpacing">Top 50 Free Online Courses  of All Time</h1>
                <h2 class="headerIntro_subTitle"></h2>

                <div class="headerIntro_buttons">
                    <div class="headerIntro_button">
                        {% include 'ClassCentralSiteBundle:Follow:btn.follow.html.twig' with {
                            item : followItem,
                            item_id : followItemId,
                            itemName: 'Top 50',
                            followed: user_session.isItemFollowed(followItem,followItemId)
                        } %}
                        <span class="headerIntro_buttonSub headerIntro_buttonSub-larger"></span>
                    </div>
                </div>
            </div>

        </div><!-- /container -->
        <div class="headerArea_tilt"></div>
    </section>
{% endblock %}

{% block content %}



    <section class="courses">
        <h2 class="section-heading">
            <span>Courses</span>
        </h2>
        <div id="filter-wrap">
            <div class="mobile-filter-btn-wrap">
                <a href="#" class="mobile-filter-btn">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
            </div>
            <div class="row">
                <div class="col-sm-4 col-lg-3 filter-column">
                    {% include 'ClassCentralSiteBundle:Helpers:filters.html.twig' with {'offSubjects':allSubjects,'offLanguages':allLanguages} %}
                </div>
                <div class="col-sm-8 col-lg-9 table-column">
                    <div class="tables-wrap">
                        {% include 'ClassCentralSiteBundle:Helpers:course.table.html.twig' with{'results':results,'tableId':'collectiontable'} %}
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}