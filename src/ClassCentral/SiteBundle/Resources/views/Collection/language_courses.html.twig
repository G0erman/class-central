{% extends 'ClassCentralSiteBundle::base.html.twig' %}


 {% block headmeta %}
     <title>Learn Spanish, Italian, Chinese, and other languages for free with MOOCs | Class Central</title>
     <meta name="description" content="Learn Spanish, Italian, Chinese, Korean, and other languages with these free online courses and MOOCs"/>

     <meta property="og:title" content="Learn a Language for Free with MOOCs"/>
     <meta property="og:type" content="website"/>
     <meta property="og:url" content="https://www.class-central.com/collection/learn-a-language"/>
     <meta property="og:image" content="https://www.class-central.com/bundles/classcentralsite/slashpixel/images/language_learning_moocs.jpg">
     <meta property="og:site_name" content="Class Central" />
     <meta property="fb:admins" content="{{ fb_admins }}" />
     <meta property="og:description"
           content="Learn Spanish, Italian, Chinese, Korean, and other languages with these free online courses and MOOCs" />

     <meta name="twitter:card" content="summary_large_image">
     <meta name="twitter:site" content="@classcentral">
     <meta name="twitter:creator" content="@dhawalhshah">
     <meta name="twitter:title" content="Learn a Language for Free with MOOCs">
     <meta name="twitter:description" content="Learn Spanish, Italian, Chinese, Korean, and other languages with these free online courses and MOOCs">
     <meta name="twitter:image" content="https://www.class-central.com/bundles/classcentralsite/slashpixel/images/language_learning_moocs.jpg">
 {% endblock %}

{% block contentheader %}
    <section class="headerArea headerArea-slim">
        <div class="container">
            <div class="headerIntro">

                <div class="headerIntro_topText">
                    Language Learning MOOCs
                </div>

                <h1 class="headerIntro_title headerIntro_title-noSpacing">Learn a New Language</h1>
                <h2 class="headerIntro_subTitle">Learn Spanish, Italian, Chinese, Korean, and other languages with these free online courses and MOOCs</h2>

                <div class="headerIntro_buttons js-tour-point" id="top-50-tour" data-step-nr="0" >
                    <a href="#" class="pulseCircle" >
                        <div class="pulseCircle_dot"></div>
                        <div class="pulseCircle_pulse"></div>
                    </a>
                    <div class="headerIntro_button">

                        {% include 'ClassCentralSiteBundle:Follow:btn.follow.html.twig' with {
                        item : followItem,
                        item_id : followItemId,
                        itemName: '',
                        followed: user_session.isItemFollowed(followItem,followItemId)
                        } %}
                        <span class="headerIntro_buttonSub headerIntro_buttonSub-larger"></span>
                    </div>
                </div>
            </div>

        </div><!-- /container -->
        <div class="headerArea_tilt"></div>
    </section>
{% endblock %}

{% block content %}



    <section class="courses">
        <h2 class="section-heading">
            <span>Courses</span>
        </h2>
        <div id="filter-wrap">
            <div class="mobile-filter-btn-wrap">
                <a href="#" class="mobile-filter-btn">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
            </div>
            <div class="row">
                <div class="col-sm-4 col-lg-3 filter-column">
                    {% include 'ClassCentralSiteBundle:Helpers:filters.html.twig' with {'offSubjects':allSubjects,'offLanguages':allLanguages} %}
                </div>
                <div class="col-sm-8 col-lg-9 table-column">
                    <div class="tables-wrap">
                        {% include 'ClassCentralSiteBundle:Helpers:course.table.html.twig' with{'results':results,'tableId':'collectiontable'} %}
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}