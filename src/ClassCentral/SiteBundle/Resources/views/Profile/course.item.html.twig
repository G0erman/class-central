{# renders a single line of course item in interested tabs and transcripts #}
<div class="tab-pane-item">
    <h3>

       <span class="item-title">
           <a href="{{ path('ClassCentralSiteBundle_mooc',{'id': course.id, 'slug': course.slug} ) }}">{{ course.name }}</a>
       </span>
       {% if userStatus is defined %}
       {#  <span class="item-status">{{ userStatus }}</span> #}
       {% endif %}

    </h3>
    <span class="item-info">
            <ul class="table-uni-list">
                {% if course.institutions|length > 0  %}
                    {% for institution in course['institutions'] %}
                        {% set route = 'ClassCentralSiteBundle_university' %}
                        {% if not institution['isUniversity'] %}
                            {% set route = 'ClassCentralSiteBundle_institution' %}
                        {% endif %}
                        <li>
                            <a class="uni-name" href="{{ path(route,{'slug' : institution['slug']|lower })}}" title="List of {{institution['name']}} MOOCs" onClick="_gaq.push(['_trackEvent', 'Inbound Clicks - University', '{{institution['name']}}', '{{course['name']}}'])">{{institution['name']}}</a>

                        </li>
                    {% endfor %}
                {% endif %}
                {% if course['provider'] %}
                    <span class="via">via</span>
                    <a href="{{ path('ClassCentralSiteBundle_initiative', {'type': course.provider.code }) }}"  class="initiativelinks" title="List of {{ course['provider']['tooltip'] }} MOOCs" onClick="_gaq.push(['_trackEvent', 'Inbound Clicks - Initiative', '{{ course.provider.name }}', '{{course.name}}'])"> {{ course.provider.name }}</a>
                {% endif %}
            </ul>
    </span>

    {%  if review is defined and review is not empty %}
    <div class="rating-wrap">
        <span class="rating-text">I rate this course</span>
        <span class="course-rating" data-score="{{ review.rating}}"></span>
    </div>

    <a href="#" class="read-review">Read review</a>
        <span class="review-date">Written {{ review.displayDate }}</span>
        <div itemprop="description">

            <div class="review-content">
                <div class="review-full">
                    <span class="review-border"></span>
                    {{ review.reviewText|striptags('<br>')|raw }}
                </div>
            </div>

            <div class="review-info">
                {{ user.displayName }} {{ review.reviewTitle|raw }}
            </div>

        </div>
    {% endif %}
</div>