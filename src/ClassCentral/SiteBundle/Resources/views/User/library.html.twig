{% extends 'ClassCentralSiteBundle:Layouts:standard.html.twig' %}

{% block headmeta %}
    <title>My Courses | Class Central</title>
{% endblock %}

{%  block content %}

  <div class="classcentral-style">

    <header class="width-centered padding-horz-large margin-top-large" style="max-width: 1250px;">
      <div class="row">
        <div class="col width-3-5 padding-right-large">
          <h1 class="margin-vert-medium">
            <strong class="head-1 text--bold">My Courses</strong>
          </h1>
        </div>
      </div>

    </header>

    <section class="width-centered padding-horz-large" style="max-width: 1250px;">
      <div class="row">
        <div class="col width-100 large-up-width-1-4 large-up-padding-right-xlarge filters-wrap">
          {% include 'ClassCentralSiteBundle:Helpers:filters.html.twig' with
          {'offSubjects': allSubjects, 'offLanguages': allLanguages, 'results': courses } %}
        </div>
        <div class="col width-100 large-up-width-3-4 tables-wrap margin-bottom-large">
          {% include 'ClassCentralSiteBundle:User:libraryTable.html.twig' %}
        </div>
      </div>
    </section>
  </div>
{% endblock %}
