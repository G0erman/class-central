<a
  data-track-click="{{ ts.event('REVIEW_CLICK') }}"
  data-track-props='{ "type": "Write a review", "title": "{{ course.name }}", "sub_section": "{{ courseType }}" }'
  href="/review/new/{{ course.id }}"
  class="course-card review-card hover-grow shadow border--thin border--gray-light border-box block"
>
  <div class="course-card-container row padding-large border-bottom border--thin border--gray-light relative">
    <h3 class="width-3-5 col head-5 text--charcoal truncate">{% if course.institutions %}{{ course.institutions[0]["name"] }}{% endif %}</h3>
    <h4 class="width-2-5 col head-5 text--gray text--italic text-right">
      <span class="truncate icon--left icon-{{ course.provider["name"]|lower }}-gray icon--small">{{ course.provider["name"]}}</span>
    </h4>
    <h2 class="course-card-title width-1-1 col text-1 text--charcoal margin-top-small">
      {{ course.name|length > 60 ? course.name|slice(0, 60) ~ '...' : course.name }}
    </h2>
  </div>
  <div class="row padding-horz-large padding-vert-medium text-center">
    <p class="icon--left icon-star text--blue head-3">Write a review</p>
  </div>
</a>
