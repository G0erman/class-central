{% if format == 'table' %}
<tr>
    <td class="add-column">
        <span class="ad-strip__icon">Ad</span>
    </td>


    <td class="course-name-column">
        <span class="label label-warning hidden-md hidden-lg hidden-sm">Ad</span>
        <a class="course-name ad-name"  rel="nofollow"  target="_blank" href="{{ courseUrl }}" onmousedown="ga('send','event', 'Table Ad', '{{ providerName }} - {{ tableId }}', '{{ courseName }}'); CC.Class['Analytics'].logCourseAd('Table Ad','{{ providerName }}','{{ courseName }}');" title="{{ courseName }}"><span itemprop="name">{{ courseName }}</span></a>
        <ul class="table-uni-list">
            {% if institutionName is not empty %}
                <li>
                    <a class="uni-name" rel="nofollow" href="{{ institutionUrl }}"  onmousedown="ga('send','event', 'Inbound Clicks - University', '{{ institutionName }}', '{{ courseName }}')">{{ institutionName }}</a>

                </li>
            {% endif %}
            <span class="via">via</span>
            <a rel="nofollow" href="{{ providerUrl }}" target="_blank" class="initiativelinks" title="{{ courseName }}" onclick="ga('send','event', 'Table Ad - Provider', '{{ providerName }}', '{{ courseName }}')">{{ providerName }}</a>
        </ul>
    </td>

    {% if page is defined and page != 'stream' and page=='home' %}
        <td class="subject-column"> <a class="subject" href="/subject/{{ subjectSlug }}" title="List of {{ subjectName }} MOOCs" onclick="ga('send','event', 'Inbound Clicks - Stream', '{{ subjectName }}', '{{ courseName }}')" data-category="{{ subjectName }}">{{ subjectName }}</a>
        </td>
    {% endif %}

    <td class="start-date">{{ courseDate }}</td>

    <td data-timestamp="5" class="course-rating-column">
        <div class="rating-and-count-wrap">
            <div class="course-table-rating">
                   {% include 'ClassCentralSiteBundle:Helpers:starRating.html.twig' with {formattedRating: 5,ratingColour: 'dark'} %}
            </div>
        </div>
    </td>

</tr>
{% elseif format =='course-top' %}
    <div class="course-meta__ad">
        <div class="ad-strip">
            <div class="ad-strip__icon">
                AD
            </div>
            <div class="ad-strip__content">
                    <span class="ad-strip__large-text">
                        <a href="{{ courseUrl }}" target="_blank" rel="nofollow" onmousedown="ga('send','event', 'Course Page Ad', '{{ providerName }}', '{{ courseName }}');CC.Class['Analytics'].logCourseAd('Course Page Ad','{{ providerName }}','{{ courseName }}');"> {{ courseName }} </a>
                    </span>

                    <span class="ad-strip__small-text">
                        {% if institutionName is not empty %} {{ institutionName }}{% endif %} via
                        <a rel="nofollow" href="{{ providerUrl }}" target="_blank" onmousedown="ga('send','event', 'Course Page Ad - Provider', '{{ providerName }}', '{{ courseName }}')">{{ providerName }}</a>
                    </span>
            </div>
        </div>
    </div>
{% endif %}