{# Related section shown below the course#}

{#
    related:
        items (array):
            name,numCourses,numFollows,url
        type
        header
        name
        view_all_url
        skipName

#}

<br/><br/>

{% set relatedIcon = 'subject' %}
{% if related.type == 'institution' %}
    {% set relatedIcon = 'university' %}
{% elseif related.type == 'provider' %}
    {% set relatedIcon = 'provider' %}
{% endif %}

<section id="cc-related" class="width-centered classcentral-style" style="max-width: 1400px;">
  <div class="margin-top-large margin-horz-xxlarge padding-vert-medium relative border-top border--thin">
    <h4 class="head-3 icon-{{ relatedIcon }}-charcoal icon--left"><span class="">{{ related.header }}</span></h4>
    <ul data-equalize>
        {% for relatedItem in related.items if relatedItem.name != related.skipName %}
            <li data-equalize-child>
                <h5><a href="{{ relatedItem.url }}" class="text--blue text-2"
                       onmousedown="ga('send','event', 'Related Section Clicks', '{{related.type}}', '{{relatedItem.name}}')">{{ relatedItem.name }}</a></h5>
                <p>{{ relatedItem.numCourses }} Courses / <span class="text--bold"><span data-format-number="short">{{ relatedItem.numFollows }}</span> following</span></p>
            </li>
        {% endfor %}
        <li>
            <a href="{{ related.view_all_url }}" class="btn-white"><span class="icon-arrow-right-blue icon--right">View All</span></a>
        </li>
    </ul>
  </div>
</section>
