{% if course.interview %}
<aside class="margin-vert-large margin-horz-medium">
  {% set interview = course.interview %}
  <div class="unit-horz border-bottom border--thin border--gray-xlight">
    <div class="unit-block padding-right-small">
        <a
          href="{{ interview.url }}"
          onmousedown="ga('send','event','Read Instructor Interview','{{ course.name }}')"
          class="border-all inline-block relative"
          style="
            width: 65px;
            height: 65px;
            border-radius: 50%;
            background-color: #f9f9f9;
            border-color: #f1f1f1;
          ">
          <span
            class="bg-cover block absolute width-100 height-100 left top"
            style="
              border-radius: 50%;
              background-image: url({{ interview.image }});
            "></span>
        </a>
    </div>
    <div class="unit-block unit-fill">
      <div class="text--charcoal text--charcoal">Class Central presents an Interview with</div>
      <strong class="text-1 text--bold">{{ interview.instructorName }}</strong>
    </div>
  </div>
  <p class="text-2 margin-vert-medium">
    {{ interview.summary }}
    <a
      href="{{ interview.url }}"
      onmousedown="ga('send','event','Read Instructor Interview','{{ course.name }}')"
      class="block margin-top-xxsmall text--blue"
    >
      Read Interview
    </a>
  </p>
</aside>
{% endif %}
