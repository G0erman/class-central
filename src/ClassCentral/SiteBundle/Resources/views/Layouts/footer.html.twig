<div class="classcentral-style">
  {% if page is defined and page != "auth" %}
    {% if page is not defined or page != "home" %}
      {% include 'ClassCentralSiteBundle:Helpers:cc.signup.html.twig' %}
    {% else %}
      {% include 'ClassCentralSiteBundle:Helpers:cc.social.html.twig' %}
    {% endif %}
  {% endif %}

  <footer class="width-centered {% if page is defined and page == "auth" %}auth-footer{% else %}bg-white{% endif %}" style="max-width: 1200px;">
    {% block footer %}
      {% if page is not defined or page != "auth" %}
        <div class="row text-center padding-xxlarge">
          <div id="footer-links" class="col small-width-100 medium-width-3-5 row border-box padding-bottom-xxlarge">
            <div class="col small-width-100 medium-width-1-3 text-left border-box padding-right-medium">
              <h4 class="head-3 margin-bottom-medium">Browse</h4>
              <ul>
                <li class="margin-vert-xxsmall">
                  <a
                    data-track-click="{{ ts.event('FOOTER_CLICK') }}"
                    data-track-props='{"type": "More", "title": "Providers"}'
                    class="text-2 text--blue"
                    href="{{ path('providers') }}"
                  >
                    Providers
                  </a>
                </li>
                <li class="margin-vert-xxsmall">
                  <a
                    data-track-click="{{ ts.event('FOOTER_CLICK') }}"
                    data-track-props='{"type": "More", "title": "Universities"}'
                    class="text-2 text--blue"
                    href="{{ path('universities') }}"
                  >
                    Universities
                  </a>
                </li>
                <li class="margin-vert-xxsmall">
                  <a
                    data-track-click="{{ ts.event('FOOTER_CLICK') }}"
                    data-track-props='{"type": "More", "title": "Institutions"}'
                    class="text-2 text--blue"
                    href="{{ path('institutions') }}"
                  >
                    Institutions
                  </a>
                </li>
                <li class="margin-vert-xxsmall">
                  <a
                    data-track-click="{{ ts.event('FOOTER_CLICK') }}"
                    data-track-props='{"type": "More", "title": "Subjects"}'
                    class="text-2 text--blue"
                    href="{{ path('subjects') }}"
                  >
                    Subjects
                  </a>
                </li>
                <li class="margin-vert-xxsmall">
                  <a
                    data-track-click="{{ ts.event('FOOTER_CLICK') }}"
                    data-track-props='{"type": "Browse", "title": "Careers"}'
                    class="text-2 text--blue"
                    href="{{ path('careers') }}"
                  >
                    Careers
                  </a>
                </li>
                <li class="margin-vert-xxsmall">
                  <a
                    data-track-click="{{ ts.event('FOOTER_CLICK') }}"
                    data-track-props='{"type": "Browse", "title": "Languages"}'
                    class="text-2 text--blue"
                    href="{{ path('languages') }}"
                  >
                    Languages
                  </a>
                </li>
              </ul>
            </div>
            <div class="col small-width-100 medium-width-1-3 text-left border-box padding-right-medium">
              <h4 class="head-3 margin-bottom-medium">More</h4>
              <ul>
                <li class="margin-vert-xxsmall">
                  <a
                    data-track-click="{{ ts.event('FOOTER_CLICK') }}"
                    data-track-props='{"type": "More", "title": "MOOCs for Credit"}'
                    class="text-2 text--blue"
                    href="https://www.class-central.com/report/moocs-for-credit/"
                  >MOOCs for Credit</a>
                </li>
                <li class="margin-vert-xxsmall">
                  <a
                    data-track-click="{{ ts.event('FOOTER_CLICK') }}"
                    data-track-props='{"type": "More", "title": "Earn a Credential"}'
                    class="text-2 text--blue"
                    href="{{ path('credentials') }}"
                  >Earn A Credential</a>
                </li>
                <li class="margin-vert-xxsmall">
                  <a
                    data-track-click="{{ ts.event('FOOTER_CLICK') }}"
                    data-track-props='{"type": "More", "title": "MOOC Report"}'
                    class="text-2 text--blue"
                    href="/report"
                  >MOOC Report</a>
                </li>
                <li class="margin-vert-xxsmall">
                  <a
                    data-track-click="{{ ts.event('FOOTER_CLICK') }}"
                    data-track-props='{"type": "More", "title": "FAQ"}'
                    class="text-2 text--blue"
                    href="{{ path('ClassCentralSiteBundle_faq') }}"
                    title="Frequently asked questions about MOOCs"
                  >FAQ</a>
                </li>
              </ul>
            </div>
            <div class="col small-width-100 medium-width-1-3 text-left border-box padding-right-medium">
              <h4 class="head-3 margin-bottom-medium">Connect</h4>
              <ul>
                <li class="margin-vert-xxsmall">
                  <a
                    data-track-click="{{ ts.event('FOOTER_CLICK') }}"
                    data-track-props='{"type": "Connect", "title": "Email"}'
                    class="text-2 text--blue"
                    href="mailto:contact@class-central.com"
                    title="Class Central contact"
                  >
                    Email
                  </a>
                </li>
                <li class="margin-vert-xxsmall">
                  <a
                    data-track-click="{{ ts.event('FOOTER_CLICK') }}"
                    data-track-props='{"type": "Connect", "title": "Facebook"}'
                    class="text-2 text--blue"
                    target="_blank"
                    href="https://www.facebook.com/classcentral"
                  >Facebook</a>
                </li>
                <li class="margin-vert-xxsmall">
                  <a
                    data-track-click="{{ ts.event('FOOTER_CLICK') }}"
                    data-track-props='{"type": "Connect", "title": "Twitter"}'
                    class="text-2 text--blue"
                    target="_blank"
                    href="https://twitter.com/classcentral"
                  >Twitter</a>
                </li>
                <li class="margin-vert-xxsmall">
                  <a
                    data-track-click="{{ ts.event('FOOTER_CLICK') }}"
                    data-track-props='{"type": "Connect", "title": "Google+"}'
                    class="text-2 text--blue"
                    target="_blank"
                    href="https://plus.google.com/+ClassCentral"
                  >Google+</a>
                </li>
                <li class="margin-vert-xxsmall">
                  <a
                    data-track-click="{{ ts.event('FOOTER_CLICK') }}"
                    data-track-props='{"type": "Connect", "title": "YouTube"}'
                    class="text-2 text--blue"
                    target="_blank"
                    href="http://www.youtube.com/channel/UC0VOktSaVdm_YIUa4X5mBTQ"
                  >YouTube</a>
                </li>
              </ul>
            </div>
          </div>
          <div class="col small-width-100 medium-width-2-5 text-left">
            <h2 class="head-2 margin-bottom-small">Class Central Newsletter</h2>
            <p class="text--charcoal text-2">Never miss a course.</p>
            <form action="{{ path('newsletter_subscribe_to',{code: 'mooc-report'}) }}" method="post" class="form margin-top-medium margin-bottom-small">
              <div class="row">
                <input type="email" name="email" required placeholder="Your email" class="col width-3-5" />
                <div class="col width-2-5">
                  <button type="submit" class="btn-blue width-100 margin-left-medium">Subscribe</button>
                </div>
              </div>
            </form>
            <p class="text--gray text-3">No spam. Unsubscribe at any time.</p>
          </div>
          <div id="footer-copyright" class="col width-100 margin-vert-xxlarge text-left">
            <span class="symbol-classcentral-gray symbol--small inline-block"></span>
            <span class="text-3 text--gray">&copy; Copyright 2011-{{ "now"|date("Y") }}</span>
          </div>
        </div>
      {% else %}
        <div class="text-center margin-vert-xxlarge padding-xlarge">
          <span class="text-3 text--charcoal">&copy; Class Central 2011-{{ "now"|date("Y") }}</span>
          <ul class="medium-inline-block small-block margin-left-medium">
            <li class="small-block medium-inline-block medium-padding-horz-medium small-margin-vert-small"><a class="text-3 text--charcoal" href="{{ path('ClassCentralSiteBundle_faq') }}" title="Frequently asked questions about MOOCs" onmousedown="ga('send','event', 'Footer', 'FAQ')">FAQ</a></li>
            <li class="small-block medium-inline-block medium-padding-horz-medium small-margin-vert-small"><a class="text-3 text--charcoal" href="{{ path('ClassCentralSiteBundle_privacy') }}" onmousedown="ga('send','event', 'Footer', 'Privacy Policy')"> Privacy Policy</a></li>
          </ul>
        </div>
      {% endif %}
    {% endblock %}

    {# Session flash messages #}
    <div class="flash-messages hidden">
        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="flash-message" data-type="{{ type }}" data-title="{{ message.title }}" data-delay="{{ message.delay }}">{{ message.text }}</div>
            {% endfor %}
        {% endfor %}
    </div>
  </footer>
</div>
